            p.lead User Registration
        .row
            .col-md-4.order-md-2.mb-4
            .col-md-8.order-md-1
                h4.mb-3 Billing address
                form.needs-validation(novalidate='' action='/signup' method='post')
                    .row
                        .col-md-6.mb-3
                            label(for='firstName') First name
                            input(type='hidden', name='_csrf', value=_csrf)
                            input#firstName.form-control(type='text', name='firstName' placeholder='', value='', required='')
                            .invalid-feedback
                                | Valid first name is required.
                        .col-md-6.mb-3
                            label(for='lastName') Last name
                            input#lastName.form-control(type='text', name='lastName' placeholder='', value='', required='')
                            .invalid-feedback
                                | Valid last name is required.
                    .mb-3
                        label(for='username') Username
                        .input-group
                            .input-group-prepend
                            span.input-group-text @
                            input#username.form-control(type='text', name='username' placeholder='Username', required='')
                            .invalid-feedback(style='width: 100%;')
                                | Your username is required.
                    .mb-3
                        label(for='email')
                            | Email 
                            span.text-muted 
                        input#email.form-control(type='email', name='email' placeholder='you@example.com' required='')
                        .invalid-feedback
                            | Please enter a valid email address.
                    .mb-3
                        label(for='email')
                            | Phone 
                            span.text-muted 
                        input#phone.form-control(type='text', name='phone' placeholder='07 000 000 00')
                        .invalid-feedback
                            | Please enter a valid phone.
                    .mb-3
                        label(for='address') Address
                        input#address.form-control(type='text', name='address' placeholder='1234 Main St', required='')
                        .invalid-feedback
                            | Please enter your address.
                    //- .mb-3
                    //-     label(for='address2')
