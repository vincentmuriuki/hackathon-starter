                        //-             | Unverified: &nbsp;
                        //-             a(href='/account/verify') Send verification email

                  

                  .form-group
                    label(for='price') Price
                    input#price.form-control(type='text', name='price' placeholder='Enter your website address')
                  .form-group
                    label(for='bathroom') Bathrooms
                    input#bathroom.form-control(type='number', name='bathroom' placeholder='No of Bathrooms')

                  .form-group
                    label(for='bedroom') Brdroom
                    input#bedroom.form-control(type='number', name='bedroom' placeholder='No of Bedrooms')

                  .form-group
                    label(for='image') Image
                    input#image.form-control(type='file', name='image')
                  button.btn.btn-primary(type='submit') Submit
                  button.btn.btn-light(type='reset') Cancel