                    //-         span.text-muted (Optional)
                    //-     input#address2.form-control(type='text', placeholder='Apartment or suite')
                    //.row
                    .mb-3
                        label(for='country') County
                        select#county.custom-select.d-block.w-100(required='' name='county')
                            option(value='') Choose...
                            option Nairobi
                        .invalid-feedback
                            | Please select a valid county.
                        //- .col-md-4.mb-3
                        //-     label(for='state') State
                        //-     select#state.custom-select.d-block.w-100(required='')
                        //-     option(value='') Choose...
                        //-     option California
                        //-     .invalid-feedback
                        //-         | Please provide a valid state.
                    label Type of User
                    .col-sm-6
                        .form-check.form-check-inline
                            input(type='radio', class='form-check-input'  name='userType', value='user', data-toggle='radio')
                            label.form-check-label User

                        .form-check.form-check-inline
                            input(type='radio', class='form-check-input' , name='userType', value='enlister', data-toggle='radio')
                            label.form-check-label Enlister

                        .form-check.form-check-inline
                            input(type='radio', class='form-check-input' , name='userType', value='sponsor', data-toggle='radio')
                            label.form-check-label Sponsor

                    .mb-3
                        label(for='zip') Password
                        input#password.form-control(type='password', name='password' placeholder='password', required='')
                        .invalid-feedback
                            | Password is required.
                    .mb-3
                        label(for='zip') Confirm Password
                        input#confirmPassword.form-control(type='password', name='confirmPassword' placeholder='Confirm password', required='')
                        .invalid-feedback
                            | Confirm Password is required.

                        hr.mb-4
                        button.btn.btn-primary.btn-lg.btn-block(type='submit') Submit
